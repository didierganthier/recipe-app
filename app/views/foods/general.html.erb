<div class="flex flex-col justify-center text-center p-8">
  <div class="">
    <p class="font-bold text-xl">Shopping List</p>
    <img src="https://cdn-icons-png.flaticon.com/512/3514/3514242.png" alt="shopping cart" class="w-20 h-20 mx-auto my-10">
    <div class="flex flex-col flex-wrap justify-around my-4">
      <div><span>Amount of food items to buy: </span><span class="font-bold">&nbsp;<%= @foods.length %></span></div>
      <div><span>Total value of food needed:</span><span class="font-bold">&nbsp;$<%= @total %></span></div>
    </div>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left text-gray-500">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Food
                </th>
                <th scope="col" class="px-6 py-3">
                    Quantity
                </th>
                <th scope="col" class="px-6 py-3">
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr class="bg-white border-b hover:bg-gray-50">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                    <%= food.name %>
                </th>
                <td class="px-6 py-4">
                    <%= food.quantity %>
                </td>
                <td class="px-6 py-4">
                    $<%= food.price * food.quantity %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>