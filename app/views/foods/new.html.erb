<div class="flex justify-center">
  <%= form_with model: @food, class: "mt-16 px-8 py-4 w-96 bg-white rounded-lg shadow-lg h-fit" do |form| %>
    <% if @food.errors.any? %>
      <div>
        <h3><%= pluralize(@food.errors.count, "error") %>occurred: </h3>
        <ul>
          <%= @food.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h2 class="text-xl font-bold text-center text-gray-700">Add a New Food</h2>
    <div class="my-4">
      <%= form.label :name, "Name" %>
      <%= form.text_field :name, placeholder: "Name", required: true, autofocus: true, class: "px-4 py-2 rounded-md mt-2 w-full bg-blue-100" %>
    </div>
    <div class="my-4">
      <%= form.label :quantity, "Quantity" %>
      <%= form.number_field :quantity, placeholder: 0, required: true, autofocus: true, class: "px-4 py-2 rounded-md mt-2 w-full bg-blue-100" %>
    </div>
    <div class="my-4">
      <%= form.label :measurement_unit, "Measurement Unit" %>
      <%= form.text_field :measurement_unit, placeholder: "kg", required: true, autofocus: true, class: "px-4 py-2 rounded-md mt-2 w-full bg-blue-100" %>
    </div>
    <div class="my-4">
      <%= form.label :price, "Price" %>
      <%= form.number_field :price, placeholder: 100, required: true, autofocus: true, class: "px-4 py-2 rounded-md mt-2 w-full bg-blue-100" %>
    </div>
    <div class="text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 text-center p-2 rounded cursor-pointer">
      <%= form.submit "Add Food", data: { disable_with: "Loading" } %>
    </div>
  <% end %>
</div>